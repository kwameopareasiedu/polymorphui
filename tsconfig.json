{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "rootDir": "src",
    "moduleResolution": "node10",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["types"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
