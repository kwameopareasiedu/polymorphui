{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "typeRoots": [
      "types", "node_modules/@types"],
    "paths": { "@/*": ["./src/*"] }
  },
  "include": ["src",
    "types"
  ],
  "exclude": [
    "../../node_modules", "dist", "sample"]
}
