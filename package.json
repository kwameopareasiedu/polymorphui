    "esprima": "^4.0.1",
    "rollup": "^4.24.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@popperjs/core": "^2.11.8",
    "@svgr/rollup": "^8.1.0",
    "@types/esprima": "^4.0.6",
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "eslint": "^9.12.0",
